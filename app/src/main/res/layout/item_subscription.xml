<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:padding="16dp">

    <!-- Channel Icon (Circular) -->
    <ImageView
        android:id="@+id/iv_channel_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/circle_background"
        android:padding="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_subscription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Channel Name -->
    <TextView
        android:id="@+id/tv_channel_name"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="Channel Name"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/iv_channel_icon"
        app:layout_constraintStart_toStartOf="@id/iv_channel_icon"
        app:layout_constraintTop_toBottomOf="@id/iv_channel_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>